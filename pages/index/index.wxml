<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取公共信息 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class="Logkind">
   <button bindtap="StudentLog" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 
   我是学生 </button>
   <button bindtap="AdmiLog" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 
   我是食堂人员 </button>
  </view>

  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
