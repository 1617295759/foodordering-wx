<!--pages/mine/mine.wxml-->
<view class="userinfo">
	<image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
	<text class="userinfo-nickname">{{userInfo.nickName}}</text>
</view>
<view class="options">
	<button wx:if="{{userstate!=2}}" bindtap="toRegister">去认证身份</button>
	<view wx:else>
  <view class="info">我的学号{{userID}}</view>
  <view class="info">我的手机{{phone}}</view>
  <view class="info">我的姓名{{username}}</view>
		<button class="info">我的消息</button>
		<button bindtap="exit" class="info">退出登录</button>
	</view>
</view>